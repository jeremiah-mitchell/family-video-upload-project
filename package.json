{
  "name": "family-video-upload-project",
  "version": "0.1.0",
  "private": true,
  "description": "Metadata tagging webapp for cataloging home videos in Jellyfin",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=@family-video/web",
    "dev:api": "npm run start:dev --workspace=@family-video/api",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
